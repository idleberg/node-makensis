{
  "name": "makensis",
  "version": "3.0.0-alpha.1",
  "description": "A Node wrapper for makensis, the NSIS compiler",
  "type": "module",
  "main": "./dist/makensis.cjs",
  "module": "./dist/makensis.js",
	"types": "./dist/makensis.d.ts",
  "exports": {
    ".": {
      "import": "./dist/makensis.js",
      "require": "./dist/makensis.cjs",
      "types": "./dist/makensis.d.ts"
    }
  },
  "files": [
    "dist/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-makensis.git"
  },
  "keywords": [
    "nsis",
    "makensis"
  ],
  "license": "MIT",
  "dependencies": {
    "@nsis/language-data": "^0.9.2"
  },
  "devDependencies": {
    "@types/node": "^18.19.21",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^9.0.11",
    "lint-staged": "15.2.2",
    "np": "^10.0.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "remark-cli": "^12.0.0",
    "remark-preset-lint-recommended": "^6.1.3",
    "remark-preset-prettier": "^2.0.1",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "tsm": "^2.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "uvu": "^0.5.6",
    "which": "^4.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "fix": "eslint --fix ./src",
    "lint:code": "eslint ./src --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "package": "np --no-yarn --any-branch",
    "prepack": "npm run build",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run test",
    "test": "uvu tests -r tsm --ignore shared.ts"
  },
  "prettier": {
    "embeddedLanguageFormatting": "off",
    "printWidth": 240,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": true
  },
  "lint-staged": {
    "*.(ts|json)": "eslint --cache --fix",
    "*.md": "prettier --write"
  },
  "packageManager": "pnpm@8.15.4+sha256.cea6d0bdf2de3a0549582da3983c70c92ffc577ff4410cbf190817ddc35137c2"
}
