{
  "name": "makensis",
  "version": "1.1.1",
  "description": "A Node wrapper for makensis, the NSIS compiler",
  "type": "module",
  "exports": "./dist/makensis.mjs",
  "typings": "types/",
  "files": [
    "dist/",
    "types/"
  ],
  "engines": {
    "node": "^14.8.0 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-makensis.git"
  },
  "keywords": [
    "nsis",
    "makensis"
  ],
  "license": "MIT",
  "dependencies": {
    "@nsis/language-data": "^0.9.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "ava": "^3.15.0",
    "eslint": "^8.2.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^7.0.4",
    "lint-staged": "11.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "remark-cli": "^10.0.0",
    "remark-preset-lint-recommended": "^6.1.1",
    "remark-preset-prettier": "^1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "tslib": "^2.3.1",
    "typescript": "4.4.4",
    "uuid": "^8.3.2",
    "which": "^2.0.2"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:code": "eslint ./src --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run build",
    "start": "rollup -w -c",
    "test": "ava ./test/*.test.*js --verbose --serial",
    "test:wine": "ava ./test/wine/*.test.*js --verbose --serial"
  },
  "prettier": {
    "embeddedLanguageFormatting": "off",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "ava": {
    "babel": true
  },
  "lint-staged": {
    "*.(ts|json)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
