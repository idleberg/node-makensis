{
  "name": "makensis",
  "version": "1.1.4",
  "description": "A Node wrapper for makensis, the NSIS compiler",
  "type": "module",
  "exports": {
    "import": "./dist/makensis.mjs",
    "require": "./dist/makensis.cjs"
  },
  "typings": "types/",
  "files": [
    "dist/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-makensis.git"
  },
  "keywords": [
    "nsis",
    "makensis"
  ],
  "license": "MIT",
  "dependencies": {
    "@nsis/language-data": "^0.9.0",
    "dotenv": "^16.0.0",
    "dotenv-expand": "^8.0.0"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "ava": "^3.15.0",
    "eslint": "^8.11.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all2": "^6.0.2",
    "prettier": "^2.5.1",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^2.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.3",
    "tslib": "^2.3.1",
    "typescript": "4.8.4",
    "uuid": "^8.3.2",
    "which": "^2.0.2"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:code": "eslint ./src --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run build",
    "start": "rollup -w -c",
    "test": "ava ./test/*.test.*js --verbose",
    "test:wine": "ava ./test/wine/*.test.*js --verbose"
  },
  "prettier": {
    "embeddedLanguageFormatting": "off",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "ava": {
    "babel": true
  },
  "lint-staged": {
    "*.(ts|json)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
