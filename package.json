{
  "name": "makensis",
  "version": "1.0.3",
  "description": "A Node wrapper for makensis, the NSIS compiler",
  "type": "module",
  "exports": {
    "import": "./dist/makensis.mjs",
    "require": "./dist/makensis.cjs"
  },
  "typings": "types/",
  "files": [
    "dist/",
    "types/"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-makensis.git"
  },
  "keywords": [
    "nsis",
    "makensis"
  ],
  "license": "MIT",
  "dependencies": {
    "@nsis/language-data": "^0.9.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "ava": "^3.15.0",
    "eslint": "^7.32.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^7.0.2",
    "lint-staged": "11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "remark-cli": "^10.0.0",
    "remark-preset-lint-recommended": "^6.0.1",
    "remark-preset-prettier": "^1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "tslib": "^2.3.1",
    "typescript": "4.3.5",
    "uuid": "^8.3.2",
    "which": "^2.0.2"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:code": "eslint ./src --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run build",
    "start": "rollup -w -c",
    "test": "ava ./test/*.test.*js --verbose",
    "test:wine": "ava ./test/wine/*.test.*js --verbose"
  },
  "prettier": {
    "embeddedLanguageFormatting": "off",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "ava": {
    "babel": true
  },
  "lint-staged": {
    "*.(ts|json)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
